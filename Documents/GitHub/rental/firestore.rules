rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to applications collection
    match /applications/{document} {
      allow read, write: if true; // For now, allow all access - you can restrict this later
    }
    
    // Allow read access to properties collection (if you want to store property data)
    match /properties/{document} {
      allow read: if true;
      allow write: if false; // Only admins should be able to write properties
    }
  }
}
